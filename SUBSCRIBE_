#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,N,X,i;
	cin>>T;
	if(T>=1 && T<=1000)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>N>>X;
	        if(N>=1 && N<=1000 && X>=1 && X<=1000)
	        {
	            if(N%6==0)
	            {
	                cout<<N*X/6<<endl;
	            }
	            else 
	            {
	                cout<<((N/6)+1)*X<<endl;
	            }
	        }
	    }
	}
	return 0;
}
