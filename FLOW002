#include<iostream>
using namespace std;
int main(){
     int T,A,B,i;
     cin>>T;
     if(T>=1 && T<=1000)
     {
         for(int i=0;i<T;i++)
         {
             cin>>A>>B;
             if(A>=1 && A<=10000 && B>=1 && B<=10000)
             {
                 cout<<A%B<<endl;
             }
         }
     }
     return 0;
}
