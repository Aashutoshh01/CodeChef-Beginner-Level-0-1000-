#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,N,X,Y,i;
	cin>>T;
	if(T>=1 && T<=100)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>N>>X>>Y;
	        if(N>=1 && X>=1 && Y>=1 && N<=100 && X<=100 && Y<=100)
	        {
	            if(X+2*Y<=N)
	            {
	                cout<<"YES"<<endl;
	            }
	            else
	            {
	                cout<<"NO"<<endl;
	            }
	        }
	    }
	}
	return 0;
}
