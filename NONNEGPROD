#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int flag1=0,flag2=0;
	    int a[n];
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	    }
	    for(int i=0;i<n;i++){
	        if(a[i]<0){
	            flag1++;
	        }
	        if(a[i]==0){
	            flag2++;
	        }
	    }
	    if(flag2!=0){
	        cout<<"0"<<endl;
	    }
	    else if(flag1%2==0){
	        cout<<"0"<<endl;
	    }
	    else{
	        cout<<"1"<<endl;
	    }
	}
	return 0;
}
