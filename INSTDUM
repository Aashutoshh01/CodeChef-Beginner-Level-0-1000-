#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int a[n],runs=0,count=0;
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	    }
	    for(int i=0;i<n;i++){
	        runs=runs+a[i];
	        if(runs==i+1){
	            count++;
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
