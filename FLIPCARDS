#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,N,X,i;
	cin>>T;
	if(T>=1 && T<=5000)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>N>>X;
	        if(N>=2 && N<=100 && X>=0 && X<=N)
	        {
	            if(N%2==0)
	            {
	                if(X<N/2)
	                {
	                    cout<<X<<endl;
	                }
	                else
	                {
	                    cout<<N-X<<endl;
	                }
	            }
	            else
	            {
	                if(X<(N+1)/2)
	                {
	                    cout<<X<<endl;
	                }
	                else
	                {
	                    cout<<N-X<<endl;
	                }
	            }
	        }
	    }
	}
	return 0;
}
