#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int N,i,j,a=0;
	cin>>N;
	if(N>=1 && N<=100)
	{
	    for(int i=0;i<N;i++)
	    {
	        for(int j=0;j<N;j++)
	        {
	            if(i+j==N)
	            {
	                a++;
	            }
	        }
	    }
	    cout<<a<<endl;
	}
	return 0;
}
