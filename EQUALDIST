#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,A,B,i;
	cin>>T;
	if(T>=1 && T<=1000)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>A>>B;
	        if(A>=1 && B>=1 && B<=100000 && A<=100000)
	        {
	            if((A+B)%2==0)
	            {
	                cout<<"YES"<<endl;
	            }
	            else
	            {
	                cout<<"NO"<<endl;
	            }
	        }
	    }
	}
	return 0;
}
