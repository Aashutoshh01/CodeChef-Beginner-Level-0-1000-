#include <iostream>
using namespace std;

int main() {
   float Y;
   int X;
   cin>>X>>Y;
   if(X>0 && X<=2000 && Y>=0 && Y<=2000)
   {
      if(X%5==0)
      {
          if(X+0.5<=Y)
          {
              cout<<Y-X-0.5<<endl;
          }
          else
          {
              cout<<Y;
          }
      }
      else
      {
          cout<<Y<<endl;
      }
   }
	return 0;
}
