#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int x,y;
	    cin>>x>>y;
	    if(y==0){
	        cout<<x<<endl;
	    }
	    else if(x==y){
	        cout<<2*y-1<<endl;
	    }
	    else{
	        cout<<2*y+(x-y)<<endl;
	    }
	}
	return 0;
}
