#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,X,Y,Z,i;
	cin>>T;
	if(T>=1 && T<=100)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>X>>Y>>Z;
	        if(X>=1 && X<=10 && Y>=1 && Y<=10 && Z>=1 && Z<=10)
	        {
	            if(Y<=X)
	            {
	                cout<<X-Y+Z<<endl;
	            }
	        }
	    }
	}
	return 0;
}
