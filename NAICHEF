#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,a,b;
	    cin>>n>>a>>b;
	    int p=0,q=0;
	    int r[n];
	    for(int i=0;i<n;i++){
	        cin>>r[i];
	    }
	    for(int i=0;i<n;i++){
	        if(r[i]==a){
	            p++;
	        }
	        if(r[i]==b){
	            q++;
	        }
	    }
	    cout<<(float)p/n*(float)q/n<<endl;
	}
	return 0;
}
