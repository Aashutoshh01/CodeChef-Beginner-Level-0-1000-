#include <iostream>
using namespace std;

int main() {
	// your code goes here
	long int t;
	cin>>t;
	while(t--){
	    long int n,m;
	    cin>>n>>m;
	    if(n%2==0 && m%2==0){
	        cout<<'0'<<endl;
	    }
	    else if(n%2==0 && m%2!=0){
	        cout<<n<<endl;
	    }
	    else if(n%2!=0 && m%2==0){
	        cout<<m<<endl;
	    }
	    else if(n%2!=0 && m%2!=0){
	        cout<<n+m-1<<endl;
	    }
	}
	return 0;
}
