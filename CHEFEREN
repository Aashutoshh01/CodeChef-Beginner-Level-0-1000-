#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T;
	cin>>T;
	if(T>=1 && T<=100)
	{
	    for(int i=0;i<T;i++)
	    {
	        int N,A,B;
	        cin>>N>>A>>B;
	        if(N>=1 && N<=60 && A>=1 && A<=60 && B>=1 && B<=60)
	        {
	            if(N%2==0)
	            {
	                cout<<N*(A+B)/2<<endl;
	            }
	            else
	            {
	                cout<<(N/2)*A+(N-N/2)*B<<endl;
	            }
	        }
	    }
	}
	return 0;
}
