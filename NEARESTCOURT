#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int x,y,l1,l2;
	    cin>>x>>y;
	    if(x-(x+y)/2<=0){
	        l1=((x+y)/2)-x;
	    }
	    else{
	        l1=x-(x+y)/2;
	    }
	    if(y-(x+y)/2<=0){
	        l2=((x+y)/2)-y;
	    }
	    else{
	        l2=y-(x+y)/2;
	    }
	    if(l1>=l2){
	        cout<<l1<<endl;
	    }
	    else{
	        cout<<l2<<endl;
	    }
	}
	return 0;
}
