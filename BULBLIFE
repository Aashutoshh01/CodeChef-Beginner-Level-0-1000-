#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,x;
	    cin>>n>>x;
	    int a[n-1];
	    int sum=0;
	    for(int i=0;i<n-1;i++){
	        cin>>a[i];
	    }
	    for(int i=0;i<n-1;i++){
	        sum+=a[i];
	    }
	    if((n*x-sum)>=0){
	        cout<<(n*x)-sum<<endl;
	    }
	    else{
	        cout<<"0"<<endl;
	    }
	}
	return 0;
}
