#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,A,B,C,i;
	cin>>T;
	if(T>=1 && T<=200)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>A>>B>>C;
	        if(A>=1 && A<=100 && B>=1 && B<=100 && C>=1 && C<=100)
	        {
	            if(A==B+C)
	            {
	                cout<<"YES"<<endl;
	            }
	            else if(B==A+C)
	            {
	                cout<<"YES"<<endl;
	            }
	            else if(C==A+B)
	            {
	                cout<<"YES"<<endl;
	            }
	            else
	            {
	                cout<<"NO"<<endl;
	            }
	        }
	    }
	}
	return 0;
}
