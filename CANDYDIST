#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T;
	cin>>T;
	if(T>=1 && T<=1000)
	{
	    for(int i=0;i<T;i++)
	    {
	        int N,M;
	        cin>>N>>M;
	        if(N>=1 && N<=1000 && M>=1 && M<=1000)
	        {
	            if(N%M==0 && (N/M)%2==0)
	            {
	                cout<<"YES"<<endl;
	            }
	            else 
	            {
	                cout<<"NO"<<endl;
	            }
	        }
	    }
	}
	return 0;
}
