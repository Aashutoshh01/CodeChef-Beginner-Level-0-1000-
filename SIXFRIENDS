#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,X,Y,i;
	cin>>T;
	if(T>=1 && T<=100)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>X>>Y;
	        if(X>=1 && X<100 && Y>=2 && Y<=100)
	        {
	            if(3*X<=2*Y)
	            {
	                cout<<3*X<<endl;
	            }
	            else
	            {
	                cout<<2*Y<<endl;
	            }
	        }
	    }
	}
	return 0;
}
