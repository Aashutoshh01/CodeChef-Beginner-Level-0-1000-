#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,X,P,Q;
	cin>>T;
	if(T>=1 && T<=10)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>X>>P>>Q;
	        if(X>=1 && X<=10 && Q>=0 && Q<=10 && P>=0 && P<=10)
	        {
	            if(Q<=P)
	            {
	                if(Q<P)
	                {
	                    cout<<(P-Q)*X<<endl;
	                }
	                else
	                {
	                    cout<<"0"<<endl;
	                }
	            }
	        }
	    }
	}
	return 0;
}
