#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,N,M,X,i;
	cin>>T;
	if(T>=1 && T<=1000)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>N>>M>>X;
	        if(N>=1 && M>=1 && X>=1 && N<=1000 && M<=1000 && X<=1000)
	        {
	            cout<<2*(N+M)*X<<endl;
	        }
	    }
	}
	return 0;
}
