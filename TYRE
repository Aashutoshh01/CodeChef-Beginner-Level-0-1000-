#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,N,M,i;
	cin>>T;
	if(T>=1 && T<=1000)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>N>>M;
	        if(N>=0 && N<=100 && M>=0 && M<=100)
	        {
	            cout<<2*N+4*M<<endl;
	        }
	    }
	}
	return 0;
}
