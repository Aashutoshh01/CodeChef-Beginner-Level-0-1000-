#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,N,M,i;
	cin>>T;
	if(T>=1 && T<=100000)
	{
	    for(int i=0;i<T;i++)
	    {
	    cin>>N>>M;
	    if(N>=2 && N<=1000000000 && M>=2 && M<=1000000000)
	    {
	        if(M%2==0)
	        {
	            cout<<M/2+1<<endl;
	        }
	        else
	        {
	            cout<<(M+1)/2<<endl;
	        }
	    }
	    }
	}
	return 0;
}
