#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    if(n%2==0){
	        int x=0,y=0,a[n];
	        for(int i=0;i<n;i++){
	            cin>>a[i];
	        }
	        for(int i=0;i<n;i++){
	            if(a[i]==1){
	                x++;
	            }
	            if(a[i]==-1){
	                y++;
	            }
	        }
	        if(x>=y){
	            cout<<(x-y)/2<<endl;
	        }
	        else{
	            cout<<(y-x)/2<<endl;
	        }
	    }
	    else{
	        int a[n];
	        for(int i=0;i<n;i++){
	            cin>>a[i];
	        }
	        cout<<"-1"<<endl;
	    }
	}
	return 0;
}
