#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,A,C,i;
	cin>>T;
	if(T>=1 && T<=60)
	{
	    for(int i=0;i<T;i++)
	    {
	    cin>>A>>C;
	    if(A>=1 && A<=10 && C>=1 && C<=10)
	    {
	        if((A+C)%2==0)
	        {
	            cout<<(A+C)/2<<endl;
	        }
	        else
	        {
	            cout<<"-1"<<endl;
	        }
	    }
	    }
	}
	return 0;
}
