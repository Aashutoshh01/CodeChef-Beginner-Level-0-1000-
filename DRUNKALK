#include <iostream>
using namespace std;

int main() {
	// your code goes here
	long int t;
	cin>>t;
	while(t--){
	    long int k;
	    long int count=0;
	    cin>>k;
	    for(int i=1;i<=k;i++){
	        if(i%2==0){
	            count-=1;
	        }
	        else{
	            count+=3;
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
