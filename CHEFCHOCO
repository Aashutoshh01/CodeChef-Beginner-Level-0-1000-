#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,C,X,Y,i;
	cin>>T;
	if(T>=1 && T<=100)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>C>>X>>Y;
	        if(C>=1 && C<=100 && Y>=1 && Y<=100 && X>=0 && X<=C)
	        {
	            cout<<(C-X)*Y<<endl;
	        }
	    }
	}
	return 0;
}
