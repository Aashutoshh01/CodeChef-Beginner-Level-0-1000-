#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T;
	cin>>T;
	if(T>=1 && T<=100)
	{
	    for(int i=0;i<T;i++)
	    {
	        int X,Y,Z;
	        cin>>X>>Y>>Z;
	        if(X>=1 && X<=100 && Y>=5 && Y<=100 && Z>=5 && Z<=15)
	        {
	            if(X%3==0)
	            {
	                cout<<X*Y+Z*((X/3)-1)<<endl;
	            }
	            else
	            {
	                cout<<X*Y+Z*(X/3)<<endl;
	            }
	        }
	    }
	}
	return 0;
}
