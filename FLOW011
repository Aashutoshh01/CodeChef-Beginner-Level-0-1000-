#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    float salary;
	    cin>>salary;
	    if(salary<1500.00){
	        cout<<2*salary<<endl;
	    }
	    else{
	        cout<<std::fixed<<500.00+float(1.98*salary)<<endl;
	        
	    }
	}
	return 0;
}
