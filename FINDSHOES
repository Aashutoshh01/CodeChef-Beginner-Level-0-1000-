#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,N,M,i;
	cin>>T;
	if(T>=1 && T<=100)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>N>>M;
	        if(N>=1 && N<=100 && M>=0 && M<=100)
	        {
	            if(N<=M)
	            {
	                cout<<N<<endl;
	            }
	            else
	            {
	                cout<<2*N-M<<endl;
	            }
	        }
	    }
	}
	return 0;
}
