#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,X,i;
	cin>>T;
	if(T>=1 && T<=100)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>X;
	        if(X>=0 && X<=100)
	        {
	            if(X%3==0)
	            {
	                cout<<"0"<<endl;
	            }
	            else if((X+1)%3==0)
	            {
	                cout<<"1"<<endl;
	            }
	            else if((X+2)%3==0)
	            {
	                cout<<"2"<<endl;
	            }
	        }
	    }
	}
	return 0;
}
