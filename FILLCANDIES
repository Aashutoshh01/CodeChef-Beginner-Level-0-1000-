#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T;
	cin>>T;
	if(T>=1 && T<=1000)
	{
	    for(int i=0;i<T;i++)
	    {
	        int N,K,M;
	        cin>>N>>K>>M;
	        if(N>=1 && N<=100 && K>=1 && K<=100 && M>=1 && M<=100)
	        {
	            if(N%(K*M)==0)
	            {
	                cout<<N/(K*M)<<endl;
	            }
	            else
	            {
	                cout<<(N/(M*K))+1<<endl;
	            }
	        }
	    }
	}
	return 0;
}
