#include <iostream>
using namespace std;



int min(int a,int b){
    if(a<=b){
        return a;
    }
    else{
        return b;
    }
}



int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    string s;
	    cin>>s;
	    int p=0,q=0;
	    for(int i=0;s[i]!='\0';i++){
	        if(s[i]=='a'){
	            p++;
	        }
	        else if(s[i]=='b'){
	            q++;
	        }
	    }
	    cout<<min(p,q)<<endl;
	}
	return 0;
}
