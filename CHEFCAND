#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T,N,X,i;
	cin>>T;
	if(T>=1 && T<=1000)
	{
	    for(int i=0;i<T;i++)
	    {
	        cin>>N>>X;
	        if(N>=1 && N<=100 && X>=1 && X<=100)
	        {
	            if(X>=N)
	            {
	                cout<<"0"<<endl;
	            }
	            else
	            {
	                if((N-X)%4==0)
	                {
	                    cout<<(N-X)/4<<endl;
	                }
	                else
	                {
	                    cout<<((N-X)/4)+1<<endl;
	                }
	            }
	        }
	    }
	}
	return 0;
}
